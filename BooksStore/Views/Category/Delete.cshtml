@model BooksStoreWeb.Models.Category

@if (ViewBag.Error != null){
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Categorie @Model.Name echt verwijderen</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />

        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Verwijderen</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Terug Naar overzicht
        </a>
    </div>
</form>

