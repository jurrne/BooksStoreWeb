@model IEnumerable<BooksStoreWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lijst met Categorieen</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> Categorie toevoegen
            </a>
        </div>
    </div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Wijzig
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash-fill"></i> Verwijder
                            </a>
                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
